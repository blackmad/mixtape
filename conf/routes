# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                           controllers.Application.index(room = "NY")

GET     /:room/controls             controllers.Application.controls(room)
GET     /:room/queue                controllers.Application.queue(room)

# OpenID
GET     /openid                     controllers.Auth.start
GET     /login                      controllers.Auth.finish

# Rdio API proxy
GET     /search                     controllers.Rdio.search(term)
GET     /artist/:id                 controllers.Rdio.artist(id)
GET     /album/:id                  controllers.Rdio.album(id)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /debug                      controllers.Application.debug

#this line has to go last
GET     /:room                      controllers.Application.index(room)
